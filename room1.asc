function hLivro_Look()
{
  MoveViewportToChar(cTeenSophie, 1);
}

function on_key_press(eKeyCode keycode) {
  
  if (keycode == eKey0){
    if ( hLivro.Enabled == true ){
      hLivro.Enabled = false;
    } else {
      hLivro.Enabled = true;
    }
  }
  
  if (keycode == eKeyH){
    ToggleHotspotsHighlights();
  }
}

