function sDoloresQuartoPassado_Talk()
{
  if (copoCaiu) {
    player.Walk(270, 310, eBlock);
    cDolores.FaceCharacter(player);
    dCopoCai.Start();
    player.ChangeRoom(1);
  }
}

function sDolores_F_GAVETAS_Talk()
{
