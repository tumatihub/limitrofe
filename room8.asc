// room script file

Region* roomAt;

function room_Load()
{
  if (DONE_BOMBOM && DONE_CRUZ && DONE_GAVETAS && DONE_NOTEBOOK && DONE_REMEDIOS && DONE_TV){
    hDiario.Enabled = true;
  }
}


function room_AfterFadeIn()
{
  if (SAIU_F_CRUZ){
    player.Think("O padrasto de Dolores sempre foi muito religioso, rígido\n e não se importava muito com o que Dolores pensava ou sentia.\n\n");
    SAIU_F_CRUZ = false;
  }
  if (SAIU_F_GAVETAS){
    player.Think("Ela sempre tirava notas muito altas..só que a pressão era enorme, ela nunca me contou o que acontecia quando ela não tirava notas altas..\n\n");
    SAIU_F_GAVETAS = false;
  }
  if (SAIU_F_TV){
    player.Think("Dolores às vezes ficava com muita raiva por causa de coisas pequenas.. isso é algo que eu nunca entendi.\n\n");
    SAIU_F_TV = false;
  }
  if (SAIU_F_REMEDIOS){
    player.Think("Aquele médico foi bem escroto… nem quis escutar a a Dolores direito.\n\n");
    SAIU_F_REMEDIOS = false;
  }
}

function on_key_press(eKeyCode keycode) {
  
  if (keycode == K_TOROOM){
    roomAt = Region.GetAtRoomXY(player.x, player.y);
    if ( roomAt == region[1] ) player.ChangeRoom(9);
    if ( roomAt == region[2] ) player.ChangeRoom(3);
    if ( roomAt == region[3] ) player.ChangeRoom(10);
    if ( roomAt == region[4] ) player.ChangeRoom(11);
  }
  else if (keycode == K_HOTSPOT){
    ToggleHotspotsHighlights();
  }
}
function room_FirstLoad()
{
  //Musica
  aSaying_Goodbye.Play(eAudioPriorityHigh, eRepeat);
  
  // Inicializa objetos e hotspots
  hNotebook.Enabled = true;
  hCruz.Enabled = true;
  hBombom.Enabled = true;
  hRemedios.Enabled = true;
  hArmarioPai.Enabled = true;
  hTV.Enabled = true;
  hGavetas.Enabled = true;
  hDiario.Enabled = false;
  
  //Seta transição
  SetScreenTransition(eTransitionDissolve);
  
  player.FaceDirection(eDirectionUp);
  player.Transparency = 0;
  player.x = 700;
  player.y = 1076;
  player.Walk(700, 1020, eBlock);
  player.Think("Me lembro vagamente daquele tempo que a gente jogava video game juntas.\n\n");
  player.Think("Você sempre gostou muito de jogos difíceis, como os do estilo roguelike.\n\n");
  player.Think("Talvez porque no final das contas esses jogos difíceis retratavam sua vida?\n\n");
  player.Think("Aqui era onde nós costumávamos passar a maior parte do tempo, será que consigo encontrar alguma resposta?\n\n");
  Display("Dica: Use 'Espaço' para mostrar os objetos que pode interagir");
}

