function room_AfterFadeIn()
{
int xpos, ypos;

player.Walk(190,  260);
player.Say("Oi Dolores!");
xpos = GetViewportX();
ypos = GetViewportY();
while (xpos < (cDolores.x - 100) && ypos > (cDolores.y - 100)){
  if (xpos < (cDolores.x - 100)){
    xpos++;
  }
  if (ypos > (cDolores.y - 100)){
    ypos--;
  }
  SetViewport(xpos, ypos);
  Wait(1);
}
SetViewport(cDolores.x - 100,  cDolores.y - 100);
Wait(1);
cDolores.FaceCharacter(player);
Wait(30);
cDolores.Say("Olá,  Sophie! Que bom que chegou!");
ReleaseViewport();
player.Walk(190,  220);
cDolores.Walk(230,  220, eBlock);
player.FaceCharacter(cDolores);
cDolores.FaceCharacter(player);
}
